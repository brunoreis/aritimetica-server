{
  "name": "aritimetica-server",
  "version": "0.0.0",
  "license": "MIT",
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "ts-node-dev --require dotenv/config --transpile-only --no-notify api/index.ts",
    "dev-inspect": "ts-node-dev --inspect --transpile-only --no-notify api/index.ts",
    "prisma:seed": "npx prisma migrate reset",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio",
    "build": "tsc",
    "start": "node dist/api/index.js",
    "clean": "rm -rf dist/*",
    "generate": "ts-node --transpile-only api/schema --require dotenv/config dotenv_config_path=/.test.env",
    "test": "npm run generate && jest --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFiles": [
      "<rootDir>/tests-dotenv-config.js"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": { "warnOnly": true }
      }
    },
    "testEnvironment": "node"
  },
  "dependencies": {
    "@logtail/pino": "^0.4.0",
    "@prisma/client": "^4.12.0",
    "apollo-log": "^1.1.0",
    "apollo-server": "3.12.0",
    "apollo-server-logging": "^1.0.2",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "graphql": "16.6.0",
    "graphql-parse-resolve-info": "^4.13.0",
    "jsonwebtoken": "^9.0.0",
    "luxon": "^3.3.0",
    "nexus": "1.3.0",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/luxon": "^3.3.0",
    "@types/pino": "^7.0.5",
    "@types/uuid": "^9.0.1",
    "get-port": "5.1.1",
    "graphql-request": "^6.1.0",
    "jest": "^29.5.0",
    "prisma": "^4.12.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "2.0.0",
    "typescript": "^5.0.4"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "printWidth": 80,
    "trailingComma": "all",
    "semi": false
  }
}
